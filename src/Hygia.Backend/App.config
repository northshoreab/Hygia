<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="UnicastBusConfig" type="NServiceBus.Config.UnicastBusConfig, NServiceBus.Core"/>
    <section name="MessageForwardingInCaseOfFaultConfig" type="NServiceBus.Config.MessageForwardingInCaseOfFaultConfig, NServiceBus.Core" />
    <section name="Logging" type="NServiceBus.Config.Logging, NServiceBus.Core" />

  </configSections>

  <connectionStrings>
    <add name="RavenDB" connectionString="Url=http://localhost:8080; defaultDatabase=Hygia"/>
  </connectionStrings>

  <Logging Threshold="WARN" />
  
  <MessageForwardingInCaseOfFaultConfig ErrorQueue="error"/>

  <UnicastBusConfig>
    <MessageEndpointMappings>
      <add Messages="Hygia.Operations.Events" Endpoint="Hygia.Backend"/>
      <add Messages="Hygia.LogicalMonitoring" Endpoint="Hygia.Backend"/>
      <add Messages="Hygia.PhysicalMonitoring" Endpoint="Hygia.Backend"/>
    </MessageEndpointMappings>
  </UnicastBusConfig>

</configuration>